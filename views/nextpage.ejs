                                </div>
                                <div class="swiper-slide templates">
                                    <img onclick="set(this.src);" class="template-images"
                                        src="/Images/Templates/T9.png">
                                </div>
                                <div class="swiper-slide templates">
                                    <img onclick="set(this.src);" class="template-images"
                                        src="/Images/Templates/T10.jpg">
                                </div>
                            </div>
                            <div class="swiper-button-prev"></div>
                            <div class="swiper-button-next"></div>
                        </div>
                        <button id="submitbtn" class="px-4 pt-1 pb-2 mt-4 mb-3 mb-sm-0" style="float:right">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var data = JSON.parse(localStorage.getItem('data'));
        //var data = localStorage.getItem('data');
        console.log(data);
        var quill = new Quill('#creation-box');
        quill.disable();

        quill.setContents(data['ops']);
        

        function set(source) {
            document.getElementById('creation-box').style.backgroundImage = "url(" + source + ")";
        }

        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 'auto',
            spaceBetween: 30,
            freeMode: true,
            loop: true,
            slidesPerGroup: 5,
            loopFillGroupWithBlank: true,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    </script>
</body>

</html>