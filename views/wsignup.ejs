        var config = {
            apiKey: "AIzaSyC0eejUPM-FAgg6dXKwOX82qtasMCRSPl4",
            authDomain: "inkbridgemailauth.firebaseapp.com",
            databaseURL: "https://inkbridgemailauth.firebaseio.com",
            projectId: "inkbridgemailauth",
            storageBucket: "",
            messagingSenderId: "190501518002"
        }; firebase.initializeApp(config);

        function btnsubmit() {
            var i = 0;
            var email = document.getElementById('email');
            var password = document.getElementById('password');

            var genresarr = [];
            var genres = document.getElementsByClassName('hashbutton');
            for (i = 0; i < genres.length; ++i) {
                genresarr.push(genres[i].innerHTML);
            }

            var languagesarr = [];
            var lang = document.getElementsByClassName('langpref');
            for (i = 0; i < lang.length; ++i) {
                if (lang[i].checked) {
                    languagesarr.push(lang[i].value);
                }
            }

            var writeups = [];
            var writes = document.getElementsByClassName('writingstyle');
            for (i = 0; i < writes.length; ++i) {
                if (writes[i].checked) {
                    writeups.push(writes[i].value);
                }
            }

            var dbRefObj = firebase.database().ref();
            var result = dbRefObj.push({
                description: " ",
                email: email.value,
                followers: 0,
                following: 0,
                gender: "null",
                genre: genresarr.toString(),
                languages: languagesarr.toString(),
                mobile: " ",
                name: document.getElementById('fullname').value,
                pens: 0,
                profileimg: " ",
                quills: " ",
                writingstyle: writeups.toString()
            });

            firebase.auth().createUserWithEmailAndPassword(email.value, password.value).catch(function (error) {
                var errorCode = error.code;
                var errorMessage = error.message;
                console.log(errorMessage);
            });
        }
