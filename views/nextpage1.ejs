    <script>
        var data = localStorage.getItem('data1');
        var templates = document.getElementsByClassName('templates');

        for (var i = 0; i < templates.length; ++i) {
            templates[i].innerHTML = data;
        }

        var swiper = new Swiper('.swiper-container', {
            scrollbar: {
                el: '.swiper-scrollbar',
                hide: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            }
        });

        /* To make the width of the content div equal to its height */
        var contentBox = document.getElementById('content');
        contentBox.style.height = contentBox.offsetWidth + 'px';

        /* To make the height of the fonts container equal to the height of the content box */
        document.getElementById('fonts-container').style.height = contentBox.offsetWidth + 'px';

        /* To make the width of the font-options buttons equal to the parent div */
        var fontButtons = document.getElementsByClassName('font-options');
        for (var i = 0; i < fontButtons.length; ++i) {
            fontButtons[i].style.width = document.getElementById('fonts-container').offsetWidth + 'px';
        }

    </script>
