<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1, maximum-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.0/css/swiper.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.5.0/js/swiper.min.js"></script>
    <link
        href="https://fonts.googleapis.com/css?family=Concert+One|Cormorant+Garamond|Dancing+Script|Fredericka+the+Great|Josefin+Slab|Kaushan+Script|Knewave|Lobster|News+Cycle|Oleo+Script|Patrick+Hand|Permanent+Marker|Special+Elite|Vidaloka"
        rel="stylesheet">
    <link rel="icon" href="/Images/logo.png">
    <title>nextpage1</title>

    <style>
        html,
        body {
            position: relative;
            height: 100%;
        }

        body {
            background: gray;
            font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
            font-size: 14px;
            color: #000;
            margin: 0;
            padding: 0;
        }

        .swiper-container{
            width: 500px;
            height: 500px;
        }

        .swiper-slide {
            font-size: 18px;
            background: #fff;
            /* Center slide text vertically
             text-align: center;
             display: -webkit-box;
            display: -ms-flexbox;
            display: -webkit-flex;
            display: flex;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            -webkit-justify-content: center;
            justify-content: center;
            -webkit-box-align: center;
            -ms-flex-align: center;
            -webkit-align-items: center;
            align-items: center; */
        }

        .font-options {
            color: white;
            border-style: solid;
            border-width: 1px;
            border-color: white;
            width: 250px;
            padding-top: 8px;
            padding-right: 15px;
            padding-left: 15px;
            padding-bottom: 8px;
            font-size: 20px;
            cursor: pointer;
            background-color: rgba(240, 248, 255, 0);
            transition-duration: 0.4s;
        }

        .font-options:focus {
            outline: none;
        }

        .font-options:hover {
            background-color: white;
            color: black;
            transition-duration: 0.4s;
        }

        p {
            margin-bottom: 0rem;
        }

        div#fonts-container {
            position: relative;
            height: 500px;
            width: 200px;
            overflow: auto;
            margin: 0px auto;
        }

        ::-webkit-scrollbar {
            display: none;
        }

        .templates {
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-3" id="fonts-container">
                <center>
                    <button onclick="document.getElementById('font-applier').style.fontFamily = 'Lobster, cursive'; "
                        style="font-family: 'Lobster', cursive;" class="font-options">
                        Lobster
                    </button><br>
                    <button
                        onclick="document.getElementById('font-applier').style.fontFamily = 'Dancing Script, cursive'; "
                        style="font-family: 'Dancing Script', cursive;" class="mt-3 font-options">
                        Dancing Script
                    </button><br>
                    <button
                        onclick="document.getElementById('font-applier').style.fontFamily = 'Cormorant Garamond, serif'; "
                        style="font-family: 'Cormorant Garamond', serif;" class="mt-3 font-options">
                        Cormorant Garamond
                    </button><br>
                    <button
                        onclick="document.getElementById('font-applier').style.fontFamily = 'Special Elite, cursive'; "
                        style="font-family: 'Special Elite', cursive;" class="mt-3 font-options">
                        Special Elite
                    </button><br>
                    <button
                        onclick="document.getElementById('font-applier').style.fontFamily = 'News Cycle, sans-serif'; "
                        style="font-family: 'News Cycle', sans-serif;" class="mt-3 font-options">
                        News Cycle
                    </button><br>
                    <button
                        onclick="document.getElementById('font-applier').style.fontFamily = 'Kaushan Script, cursive'; "
                        style="font-family: 'Kaushan Script', cursive;" class="mt-3 font-options">
                        Kaushan Script
                    </button><br>
                    <button
                        onclick="document.getElementById('font-applier').style.fontFamily = 'Patrick Hand, cursive'; "
                        style="font-family: 'Patrick Hand', cursive;" class="mt-3 font-options">
                        Patrick Hand
                    </button><br>
                    <button onclick="document.getElementById('font-applier').style.fontFamily = 'Josefin Slab, serif'; "
                        style="font-family: 'Josefin Slab', serif;" class="mt-3 font-options">
                        Josefin Slab
                    </button><br>
                    <button onclick="document.getElementById('font-applier').style.fontFamily = 'Vidaloka, serif'; "
                        style="font-family: 'Vidaloka', serif;" class="mt-3 font-options">
                        Vidaloka
                    </button><br>
                    <button
                        onclick="document.getElementById('font-applier').style.fontFamily = 'Permanent Marker, cursive'; "
                        style="font-family: 'Permanent Marker', cursive;" class="mt-3 font-options">
                        Permanent Marker
                    </button><br>
                    <button style="font-family: 'Concert One', cursive;" class="mt-3 font-options">
                        Concert One
                    </button><br>
                    <button onclick="document.getElementById('font-applier').style.fontFamily = 'Knewave, cursive'; "
                        style="font-family: 'Knewave', cursive;" class="mt-3 font-options">
                        Knewave
                    </button><br>
                    <button
                        onclick="document.getElementById('font-applier').style.fontFamily = 'Oleo Script, cursive'; "
                        style="font-family: 'Oleo Script', cursive;" class="mt-3 font-options">
                        Oleo Script
                    </button><br>
                    <button
                        onclick="document.getElementById('font-applier').style.fontFamily = 'Fredericka the Great, cursive'; "
                        style="font-family: 'Fredericka the Great', cursive;" class="mt-3 font-options">
                        Fredericka the Great
                    </button><br>
                </center>
            </div>
            <div class="col-6" id="font-applier">
                <div class="swiper-button-prev swiper-button-white"></div>
                <div class="col-11 swiper-container">
                    <div class="swiper-wrapper" id="content">
                        <div style="background-image: url('/Images/Templates/T1.jpg')" class="swiper-slide templates">
                        </div>
                        <div style="background-image: url('/Images/Templates/T2.png')" class="swiper-slide templates">
                        </div>
                        <div style="background-image: url('/Images/Templates/T3.jpg')" class="swiper-slide templates">
                        </div>
                        <div style="background-image: url('/Images/Templates/T4.jpg')" class="swiper-slide templates">
                        </div>
                        <div style="background-image: url('/Images/Templates/T5.jpg')" class="swiper-slide templates">
                        </div>
                        <div style="background-image: url('/Images/Templates/T6.jpg')" class="swiper-slide templates">
                        </div>
                        <div style="background-image: url('/Images/Templates/T7.jpg')" class="swiper-slide templates">
                        </div>
                        <div style="background-image: url('/Images/Templates/T8.jpg')" class="swiper-slide templates">
                        </div>
                        <div style="background-image: url('/Images/Templates/T9.png')" class="swiper-slide templates">
                        </div>
                        <div style="background-image: url('/Images/Templates/T10.jpg')" class="swiper-slide templates">
                        </div>
                    </div>
                    <div class="swiper-scrollbar"></div>
                </div>
                <div class="swiper-button-next swiper-button-white"></div>
            </div>
        </div>
        <button onclick="getScreenshot();" style="float: right; border-radius: 0px;"
            class="btn btn-dark mt-4" id="submit">Submit</button>
        <div style="height: 500px; width: 500px; padding: 0px; margin: 0px; border: 0px;" id="box">

        </div>
    </div>
    <script>
        var data = localStorage.getItem('data1');
        var templates = document.getElementsByClassName('templates');

        for (var i = 0; i < templates.length; ++i) {
            templates[i].innerHTML = data;
        }

        var swiper = new Swiper('.swiper-container', {
            scrollbar: {
                el: '.swiper-scrollbar',
                hide: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            }
        });
    </script>
    <script src="/js/html2canvas.min.js"></script>
    <script>
        function getScreenshot() {
            html2canvas(document.getElementById('content')).then(function (canvas) {
                document.getElementById('box').innerHTML = "";
                document.getElementById('box').appendChild(canvas);
            });
        }
    </script>
</body>

</html>