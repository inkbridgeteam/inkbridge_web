                <form class="mx-auto col-12" id="mainform">
                    <center>
                        <h2 class="pt-3 pb-2" id="createacc">Create an Account</h2>
                        <button class="mb-3" onclick="location.href='/eauth'" id="eauth"><i id="mailicon"
                                class="far fa-envelope"></i>&nbsp;&nbsp;&nbsp;&nbsp;Signup with e-mail</button><br>
                        <strong>
                            <p style="font-family: 'PT Serif', serif;">OR</p>
                        </strong>
                        <i id="Ni" class="fas fa-user"></i>
                        <input class="inp" type="text"
                            onfocus="this.placeholder = ''; document.getElementById('Ni').style.display = 'none';"
                            onblur="this.placeholder = 'Full Name'; document.getElementById('Ni').style.display = 'Unset';"
                            id="fullname" placeholder="Full Name" required="" name="fullname"
                            oninput="fillcheck();"><br><br>

                        <i id="Pi" class="fas fa-pen"></i>
                        <input class="inp" type="text"
                            onfocus="this.placeholder = ''; document.getElementById('Pi').style.display = 'none';"
                            onblur="this.placeholder = 'Penname'; document.getElementById('Pi').style.display = 'Unset';"
                            name="pen" placeholder="Penname" id="penname" required="" oninput="fillcheck();"><br><br>

                        <i id="Ei" class="fas fa-envelope"></i>
                        <input class="inp" type="email"
                            onfocus="this.placeholder = ''; document.getElementById('Ei').style.display = 'none';"
                            onblur="this.placeholder = 'Email'; document.getElementById('Ei').style.display = 'Unset';"
                            
                            id="email" name="email"
                            required="" placeholder="Email"
                            oninvalid="this.setCustomValidity('Please Enter Valid Email')"
                            oninput="fillcheck();"><br><br>

                        <i id="Pai" class="fa fa-unlock" aria-hidden="true"></i>
                        <input class="inp"
                            onfocus="this.placeholder = ''; document.getElementById('Pai').style.display = 'none';"
                            onblur="this.placeholder = 'Password'; document.getElementById('Pai').style.display = 'Unset';"
                            type="password" name="pass" placeholder="Password" id="password" required=""
                            oninput="fillcheck();"><br><br>

                        <i id="RPai" class="fa fa-unlock" aria-hidden="true"></i>
                        <input class="inp"
                            onfocus="this.placeholder = ''; document.getElementById('RPai').style.display = 'none';"
                            onblur="this.placeholder = 'Re-Enter Password'; document.getElementById('RPai').style.display = 'Unset';"
                            type="password" name="confpass" placeholder="Re-Enter Password" id="password1" required=""
                            oninput="fillcheck();"><br><br>

                        <div class="row" id="termsandcon">
                            <div class="col-12">
                                <input class="mt-2 form-check-input" type="checkbox" id="terms" required="">
                                <label class="form-check-label" for="terms" id="termstext">
                                    <a style="color: white;" href="#" target="_blank">I agree to the Terms and
                                        Conditions</a>
                                </label>
                            </div>
                        </div>
                        <button id="next" value="Next" onclick="btnsubmit(event);">Next</button><br>
